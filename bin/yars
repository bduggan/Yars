#!/usr/bin/env perl

use File::Basename 'dirname';
use File::Spec;
use Log::Log4perl qw/:easy/;

use lib join '/', File::Spec->splitdir(dirname(__FILE__)), 'lib';
use lib join '/', File::Spec->splitdir(dirname(__FILE__)), '..', 'lib';

use Yars;
use Clustericious::Commands;

use strict;
use warnings;

$ENV{MOJO_APP} ||= 'Yars';

Clustericious::Commands->start;
